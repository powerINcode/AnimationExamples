<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ToggleButton
        android:id="@+id/heartView"
        android:layout_width="66dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/state_heart"
        android:checked="true"
        android:textOff=" "
        android:textOn=" " />

    <com.example.powerincode.screens.animatedviews.views.SwitcherView
        android:id="@+id/switcherView"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:checked="false"
        android:padding="30dp"
        android:stateListAnimator="@animator/switcher_state_anim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.powerincode.screens.animatedviews.views.FlashingView
        android:id="@+id/flashingView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:numberText="3"
        app:showTimeDuration="1000"
        app:subTitleText="КАРТА"
        app:titleText="МЕД." />
</LinearLayout>