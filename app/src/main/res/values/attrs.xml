<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="slideDuration" format="integer"/>

    <declare-styleable name="ClippingTextView">
        <attr name="android:text"/>
        <attr name="android:textSize"/>
        <attr name="android:textColor"/>
        <attr name="android:textStyle"/>
        <attr name="slideDuration"/>
        <attr name="slide_direction" format="enum">
            <enum name="left" value="0"/>
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="SwitcherView">
        <attr name="android:checked" />
        <attr name="on_color" format="color" />
        <attr name="off_color" format="color" />
        <attr name="indicator_color" format="color" />
        <attr name="click_color" format="color" />
    </declare-styleable>

    <declare-styleable name="FlashingView">
        <attr name="titleText" format="string"/>
        <attr name="subTitleText" format="string"/>
        <attr name="numberText" format="string"/>
        <attr name="showTimeDuration" format="integer"/>
        <attr name="slideDuration"/>
    </declare-styleable>
</resources>